{{#unless (eq type 'vanilla')}}
  {{#unless outerBlock}}
    <label class="visuallyhidden" id="playpause-label">Play/Pause</label>
  {{/unless}}
  <NyprSvg @className="icon icon--play" @icon={{playIcon}} />
  <NyprSvg @className="icon icon--pause" @icon={{pauseIcon}} />
  <i class="listen-spinner"></i>
{{/unless}}
